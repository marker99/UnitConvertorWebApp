@using UnitConvertorWebApp.Models
@using UnitConvertorWebApp.Services
@inject IConversionService TemperatureService

<ConversionComponent TitleOfCard="Temperature" Units="temperatureUnits" DefaultFromUnit="@temperatureUnits[0]" DefaultToUnit="@temperatureUnits[1]"
                     Convert="ConvertTemperature" />


@code {
    private List<string> temperatureUnits = new List<string>
    {
        "DegreeCelsius", "DegreeFahrenheit", "Kelvin"
    };

    private ConversionResult ConvertTemperature(double inputValue, string fromUnit, string toUnit)
    {
        return TemperatureService.ConvertTemperature(inputValue, fromUnit, toUnit);
    }

}
