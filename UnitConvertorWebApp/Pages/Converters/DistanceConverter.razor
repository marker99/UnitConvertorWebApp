@using UnitConvertorWebApp.Services
@inject IDistanceConversionService DistanceService

<MudGrid Spacing="3">
    <MudItem xs="12" sm=6 md="3">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Meters to Feet</MudText>
                <MudTextField @bind-Value="meters" Label="Meters" Variant="Variant.Outlined" />
                <MudText Typo="Typo.body1">Feet: @DistanceService.MetersToFeet(meters)</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm=6 md="3">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Feet to Meters</MudText>
                <MudTextField @bind-Value="feet" Label="Feet" Variant="Variant.Outlined" />
                <MudText Typo="Typo.body1">Meters: @DistanceService.FeetToMeters(feet)</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm=6 md="3">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Kilometers to Miles</MudText>
                <MudTextField @bind-Value="kilometers" Label="Kilometers" Variant="Variant.Outlined" />
                <MudText Typo="Typo.body1">Miles: @DistanceService.KilometersToMiles(kilometers)</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm=6 md="3">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Miles to Kilometers</MudText>
                <MudTextField @bind-Value="miles" Label="Miles" Variant="Variant.Outlined" />
                <MudText Typo="Typo.body1">Kilometers: @DistanceService.MilesToKilometers(miles)</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    private double meters;
    private double feet;
    private double kilometers;
    private double miles;
}