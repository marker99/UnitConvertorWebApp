@using UnitConvertorWebApp.Models
@using UnitConvertorWebApp.Services
@inject IConversionService WeightService

<ConversionComponent TitleOfCard="Mass" Units="weightUnits" DefaultFromUnit="@weightUnits[0]" DefaultToUnit="@weightUnits[1]"
                     Convert="ConvertWeight" />

@code {
    private List<string> weightUnits = new List<string>
    {
        "Gram", "Kilogram", "Tonne", "Pound", "Ounce", "Stone"
    };

    private ConversionResult ConvertWeight(double inputValue, string fromUnit, string toUnit)
    {
        return WeightService.ConvertWeight(inputValue, fromUnit, toUnit);
    }
}
